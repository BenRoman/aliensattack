<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <link href="~/Content/info.css" rel="stylesheet" />
    <div id="nav" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("INVASION", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("alien"))
                    {
                        <li id="tex">@Html.ActionLink("Experiment", "Experiment", "Alien")</li>
                        <li id="tex">@Html.ActionLink("Transporting", "Transfer", "Alien")</li>
                        <li id="tex">@Html.ActionLink("Kidnapping", "Kidnapping", "Alien")</li>
                        <li id="tex">@Html.ActionLink("Excursion", "Excursion", "Alien")</li>
                        <li id="tex">@Html.ActionLink("Statistic", "Statistic", "Statistic")</li>
                    }
                    else if (User.IsInRole("human"))
                    {
                        <li id="tex">@Html.ActionLink("Kill", "Murdering", "Human")</li>
                        <li id="tex">@Html.ActionLink("Escape", "Escape", "Human")</li>
                        <li id="tex">@Html.ActionLink("Statistic", "Statistic", "Statistic")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
