@model List<FunnyV1.Models.Human>
@{
    ViewBag.Title = "Kidnapping";

}

<link href="~/Content/StyleSheet1.css" rel="stylesheet" />

<table class="table table-striped table-bordered table-sm">
    @foreach (var human in Model)
    {
        <tr>
            @if (human.SpaceShipId == null)
            {
                <td id ="tab">@human.FirstName</td>
                <td id ="tab">@human.SecondName</td>
                <td id ="tab">@human.Age</td>
                <td id ="tab" class="text-center">
                    <form>
                        @*<input type="button" class="btn btn-danger btn-sm" value="Add To List"  onclick= "location.href='@Url.Action("AddToList", "Alien")'"/>*@
                        <input id ="btn" type="button" value="Add" class="btn btn-success" onclick="location.href='@Url.Action("AddToList", "Alien", human)'" />
                    </form>
                </td>
            }
        </tr>
    }
</table>



<h1>Already added</h1>

<table class="table table-striped table-bordered table-sm">
    @foreach (var human in ViewBag.addedhumans)
    {
        <tr>
            <td id ="tab">@human.Id</td>
            <td id ="tab">@human.FirstName</td>
            <td id ="tab">@human.SecondName</td>
            <td id ="tab" class="text-center">
                @*<input type="button" class="btn btn-danger btn-sm" value="Add To List"  onclick= "location.href='@Url.Action("AddToList", "Alien")'"/>*@
                <input id ="btn" type="button" value="Delete" class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("DeleteFromList", "Alien", human)'" />

            </td>
        </tr>
    }
</table>
<form method="post" action="">
    <div class="text-center">
        <select id="op" class="form-control" id="inputShip" name="inputShip">
            @foreach (var ship in ViewBag.fleet)
            {
                <option   value=@ship.Id>@ship.Name - @ship.ShipTypeType</option>
            }
        </select>
    </div>


    <br />
    <br />
    @if (ViewBag.addedhumans.Count > 0)
    {
        <div class="text-center">
            <input type="submit" value="Kidnap" class="btn btn-danger btn-sm" />
            @*<input type="button" class="btn btn-primary" value="Kidnap" onclick="location.href='@Url.Action("Kidnap", "Alien")'" />*@
        </div>
    }
</form>