@model List<FunnyV1.Models.Human>
@{
    ViewBag.Title = "Experiment";

}

<link href="~/Content/StyleSheet1.css" rel="stylesheet" />
<table class="table table-striped table-bordered table-sm">
    @foreach (var human in Model)
    {
        <tr>
            @if (human.SpaceShipId != null)
            {
                <td id ="tab" >@human.FirstName</td>
                <td id ="tab" >@human.SecondName</td>
                <td id ="tab" >@human.Age</td>
                <td  id ="tab" class="text-center">
                    <form>
                        @*<input type="button" class="btn btn-danger btn-sm" value="Add To List"  onclick= "location.href='@Url.Action("AddToList", "Alien")'"/>*@
                        <input id ="btn" type="button" value="Add" class="btn btn-success" onclick="location.href='@Url.Action("AddToListExp", "Alien", human)'" />
                    </form>
                </td>
            }
        </tr>
    }
</table>



<h1>Already added</h1>

<table class="table table-striped table-bordered table-sm">
    @foreach (var human in ViewBag.addedhumans)
    {
        <tr>
            <td id ="tab">@human.Id</td>
            <td id ="tab">@human.FirstName</td>
            <td id ="tab">@human.SecondName</td>
            <td id ="tab" class="text-center">
                @*<input type="button" class="btn btn-danger btn-sm" value="Add To List"  onclick= "location.href='@Url.Action("AddToList", "Alien")'"/>*@
                <input id ="btn" type="button" value="Delete" class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("DeleteFromListExp", "Alien", human)'" />

            </td>
        </tr>
    }
</table>
<form method="post" action="">
    <div style="width:1200px;">
        <div style="float: left; width: 300px">
            <select id="op" class="form-control" id="inputEx" name="inputEx" style="float: right; width: 300px;font-size:14px">
                @foreach (var ex in ViewBag.exTypes)
                {
                    <option value=@ex.Type>@ex.Type - @ex.Description</option>
                }
            </select>
        </div>
        <div style="float: right; width: 300px">
            <select id="op" class="form-control" id="inputShip" name="inputShip" style="font-size:14px">
                @foreach (var ship in ViewBag.fleet)
                {
                    if (@ship.ShipTypeType == "Farm-ship")
                    {<option id="op" value=@ship.Id>@ship.Name - @ship.ShipTypeType</option>}
                }
            </select>
        </div>
    </div>

    <br />
    <br />
    @if (ViewBag.addedhumans.Count > 0)
    {
        <div class="text-center">
            <input type="submit" value="Create Experement" class="btn btn-danger btn-sm" />
            @*<input type="button" class="btn btn-primary" value="Kidnap" onclick="location.href='@Url.Action("Kidnap", "Alien")'" />*@
        </div>
    }
</form>
